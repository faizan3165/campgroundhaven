<%- include ('../partials/header') -%>

<div class="container">

    <header class="jumbotron text-center">
    
        <div class="container">
    
            <h1> <i class="fas fa-campground"></i> Welcome to YelpCamp </h1>

            <p>View our hand-picked campgrounds from all over the globe</p>
        
            <p>
        
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground!</a>
            
            </p>
        </div>
    </header>

    <div class="row text-center" id="campground-grid">
    
        <% campgrounds.forEach(function(campground){ %>
    
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
    
                <div class="card">
    
                    <img class="card-img-top" id="border" src="<%= campground.image %>" alt="<%= campground.name %>">
    
                    <div class="card-body">
        
                        <h5 class="card-title"><%= campground.name %></h5>

                        <div>

                            <span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %> </span>

                        </div>
        
                        <a href="/campgrounds/<%= campground.slug %>" class="btn btn-info">More Info</a>
        
                    </div>
    
                </div>
    
            </div>
    
            <% }); %>
    
    </div>

</div>


<%- include ('../partials/footer') -%>